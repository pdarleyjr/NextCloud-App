{
  "name": "Nextcloud App Development",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "nextcloud",
  "workspaceFolder": "/workspace",

  // Configure container-specific features
  "features": {},

  // Forward ports for web access and debugging
  "forwardPorts": [80, 443, 8080, 9003],
  "portsAttributes": {
    "80": {
      "label": "Nextcloud HTTP",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Nextcloud App",
      "onAutoForward": "openBrowser"
    },
    "9003": {
      "label": "Xdebug",
      "onAutoForward": "silent"
    }
  },

  // Run commands after container is created
  "postCreateCommand": "mkdir -p /workspace/Documents && bash .devcontainer/setup-fixed.sh",

  // Add VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "bmewburn.vscode-intelephense-client",
        "ms-azuretools.vscode-docker",
        "xdebug.php-debug",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "editorconfig.editorconfig"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": true
        },
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
